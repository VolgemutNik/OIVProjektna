{
  "name": "OIV Projektna",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Podpisovanje/kriptiranje mailov v odjemalcu Outlook s pomocjo OpenPGP",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "*://*.outlook.office365.com/mail/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.outlook.office365.com/mail/*"
      ],
      "js": [
        "src/plugin.js"
      ]
    }
  ]
}