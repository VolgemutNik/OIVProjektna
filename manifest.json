{
  "name": "OIV Projektna",
  "manifest_version": 2,
  "version": "1.0",
  "description": "Podpisovanje/kriptiranje mailov v odjemalcu Outlook s pomocjo OpenPGP",
  "content_scripts": [
    {
      "js": [
        "src/plugin.js"
      ],
      "matches": [
        "*://*.outlook.office365.com/mail/*",
        "*://*.outlook.office.com/mail/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "oiv@addon.com"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs",
    "*://*.outlook.office365.com/mail/*",
    "*://*.outlook.office.com/mail/*"
  ],
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "res/Login.svg"
    },
    "default_title": "OIV projektna",
    "default_popup": "view/okno.html"
  },
  "background": {
    "page": "view/background.html"
  },
  "content_security_policy": "script-src *; object-src 'self';"
}